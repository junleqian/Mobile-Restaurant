@using System.Web.Security
@using Gour.Web.UserAccountWrappers
@using Gour.Web.Infrastructure
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/storage.permissions.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    Mobile Cloud Application Services</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div style="clear: both;">
            </div>
            <nav>
                <ul id="menu">
                    @Html.MenuItem("Home", "Index", "Home")
                    @if (MembershipHelper.IsUserAdmin())
                    {

                        @Html.MenuItem("Users", "Index", "Users")

                        @Html.MenuItem("Microsoft Push Notifications", "Microsoft", "PushNotifications")


                    }
                    
                    @if (!MembershipHelper.IsUserLoggedIn())
                    {
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                    
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
